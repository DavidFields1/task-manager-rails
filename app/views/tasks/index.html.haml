%h1= t('.listing_tasks')

%table
  %thead
    %tr
      %th= t('tasks.name')
      %th= t('tasks.description')
      %th= t('tasks.due_date')
      %th= t('tasks.category')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.due_date
        %td= task.category
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to t('tasks.new_task'), new_task_path
